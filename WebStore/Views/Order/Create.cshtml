@model WebStore.Models.Order

<h2>Create Order</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="House">House</label>
        <input asp-for="House" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Apartment">Apartment</label>
        <input asp-for="Apartment" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TotalCost">Total Cost</label>
        <input asp-for="TotalCost" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserId">User ID</label>
        <input asp-for="UserId" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
